	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://www.notion.so/TRANG-CH-94e0090d5a2e424990a50619dfcc0699?pvs=4", '_blank').focus();
			else if (id == 'study')
				window.open("https://www.notion.so/H-C-T-P-e599e96b970f4af69340b722edea0102?pvs=4", '_blank').focus();
			else if (id == 'marketing')
				window.open("https://www.notion.so/MARKETING-9ef3ca90e0a947538fd07988d12c4cd5?pvs=4", '_blank').focus();
			else if (id == 'work')
				window.open("https://www.notion.so/C-NG-VI-C-823cd8af248d4d9ab222ab8766d80c12?pvs=4", '_blank').focus();
			else if (id == 'self-care')
				window.open("https://www.notion.so/CH-M-S-C-B-N-TH-N-c796fe6e829a4246a3bd837884034582?pvs=4", '_blank').focus();
			else if (id == 'self-upgrade')
				window.open("https://www.notion.so/N-NG-C-P-B-N-TH-N-a2201becdead4f3681ed892ffb2bbba1?pvs=4", '_blank').focus();
			else if (id == 'other')
				window.open("https://www.notion.so/Linh-Tinh-ab0eb2a7f20c4808ab46cd4c5825652c?pvs=4", '_blank').focus();
			

		}
	</script>


